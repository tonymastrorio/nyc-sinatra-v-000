<h1><%= @figure.name %></h1>

<form action="/figures/<%=@figure.id%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Figure:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
    <br><br>

    <label>Select any titles:</label>
    <br>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%= title.name %><br>
    <% end %>

    <br><br>
    <label> Select any landmarks:</label>
    <br>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%><br>
    <% end %>
    <br><br>

    <label>Create a new title for this Figure:</label>
    <input type="text" name="title[name]" id="new_title"><br><br>

    <label>Create a new landmark for this Figure:</label>
    <input type="text" name="landmark[name]" id="new_landmark"><br><br>

    <br><br>
    <input type="submit" value="Edit Figure">


</form>